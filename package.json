{
  "name": "reward-system",
  "author": "Indie Creators HQ",
  "version": "0.1.0-beta.1",
  "private": true,
  "engines": {
    "node": ">=v18.15.0"
  },
  "packageManager": "pnpm@8.1.1",
  "scripts": {
    "dev": "pnpm with-env turbo dev --parallel",
    "build": "pnpm with-env turbo build",
    "db:generate": "pnpm with-env turbo db:generate",
    "db:push": "pnpm with-env turbo db:push db:generate",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "with-env": "dotenv -e .env.${NODE_ENV:-local} --",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@acme/eslint-config": "*",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@paralleldrive/cuid2": "^2.2.0",
    "@types/prettier": "^2.7.2",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-prisma": "^4.12.0",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  }
}
